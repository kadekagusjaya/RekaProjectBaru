<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reka.adityo_w.prototype.FligtsActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kota Asal"
            android:id="@+id/textView" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/txtKotaAsal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kota Tujuan"
            android:id="@+id/txtKotaTujuan" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText2" />

        <TextView

            android:layout_height="wrap_content"
            android:text="Tanggal Keberangkatan"
            android:gravity="center"
            android:layout_width="match_parent"
            android:id="@+id/textView3" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText3" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pulang-Pergi"
            android:id="@+id/switch1"
            android:layout_gravity="right" />

        <TextView

            android:layout_height="wrap_content"
            android:text="Tanggal Kembali"
            android:gravity="center"
            android:layout_width="match_parent"
            android:id="@+id/textView4" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText4" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.04">

            <TextView

                android:layout_height="wrap_content"
                android:text="Dewasa"
                android:layout_width="100dp"
                android:gravity="center"
                android:id="@+id/textView5" />

            <TextView

                android:layout_height="wrap_content"
                android:text="Anak-Anak(2-12 Tahun)"
                android:layout_width="175dp"
                android:gravity="center"
                android:id="@+id/textView6" />

            <TextView
                android:layout_height="wrap_content"
                android:text="Bayi(<2 Tahun)"
                android:layout_width="100dp"
                android:gravity="center"
                android:id="@+id/textView7" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.23">

            <NumberPicker

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/npDewasa"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                />
            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/npAnak"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"


                />

            <NumberPicker
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/npBayi"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"/>
        </LinearLayout>

        <Button

            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Cari Penerbangan"
            android:id="@+id/btnCariPenerbangan"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</RelativeLayout>
